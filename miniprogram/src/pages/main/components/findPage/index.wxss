

/* 自定义导航 */
.left-nav-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.logo-text{
  font-size: 32rpx;
  color:#000;
}
.search-box{
  width: 300rpx;
  height: 46rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.search-icon{
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}
.search-placehold{
  margin-left: 10rpx;
  font-size: 28rpx;
  color:#ccc;
}
.class-leftview{
  width: auto !important;
}

.bannerBox{
display: flex;
flex-direction: column;
justify-content: center;  
 border-radius: 30rpx;
 padding: 24rpx;
 margin: 24rpx;
 background-color: #fff;
 box-shadow:0rpx 10rpx 20rpx  rgba(0,0,0,0.1)
}
.poetbanner{
  width: 650rpx;
  height: 340rpx;
  border-radius: 26rpx;
  background-color: #ccc;
}
.bannercontent{
  display: flex;
  flex-direction: column;
}
.readTitle{
 font-size: 32rpx;
 color: #333;
}
.readContent{
  font-size: 28rpx;
  color: #707070;
}
.skeletonView{
  position: fixed;
  left:0;
  right: 0;
  top:140rpx;
  bottom:0;
}


.scrol-content-box{
  margin-bottom: 120rpx;
}


.carousel-view{
  width: 100%;
  height: 400rpx;
}
.carousel-view-item{
  position: relative;
}
.carousel-bg-img{
  width: 100%;
  height: 100%;
}
.carousel-tips{
  position: absolute;
  bottom:0;
  font-size: 28rpx;
  background-color: rgba(0,0,0,0.3);
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  color:#fff;

}
.carousel-tips-text{
  margin:0 24rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
}

/* 分类 */
.categro-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}
.categro-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.categro-icon{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.categro-text{
  font-size: 28rpx;
  color: #323232;
}


/* 作者 */
.title-space{
  margin: 0 30rpx;
}
.author-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx;
}
.author-item{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #fff;
  border-radius: 20rpx;
  width: 280rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.author-img-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.author-img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.author-text{
  font-size: 24rpx;
  color: #323232;
}
.author-grey{
  color: grey;
}
.author-detail{
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  color: grey;
  font-size: 24rpx;
}

/* 诗词分类 */
.poety-catory-view{
  width: auto;
  height: 300rpx;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #2c5d63;
  border-radius: 30rpx;
  text-align: center;
  color:#fff;
 
}
.foot-tips{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100vw;
  font-size: 28rpx;
  color:#999;
  margin-bottom: 60rpx;
}
.foot-center-text{
  margin: 0 20rpx;
}