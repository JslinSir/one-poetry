.tuwenBox{
  display: flex;
  flex-direction: column;
  justify-content: center;  
   border-radius: 30rpx;
   padding: 24rpx;
   margin: 24rpx;
   background-color: #fff;
   box-shadow:0rpx 10rpx 20rpx  rgba(0,0,0,0.1);

}

.tuwenImage{
  width: 650rpx;
  height: 340rpx;
  border-radius: 26rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  margin-top: 20rpx;
}
.tuwenTitle{
  width: 400rpx;
  height: 40rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  margin-top: 20rpx;
}
.tuwencotent{
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  background-color: #ccc;
}
.skloading {
  animation: sketelonloading 1.4s ease infinite
}

@keyframes sketelonloading {
  0% {
    background-position: 100% 50%
  }

  100% {
    background-position: 0 50%
  }
}