page{
  background-color: #fff;
}
.author-list-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx;
}

.default-show-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 800rpx;
}

.default-show{
  width: 200rpx;
  height: 200rpx;
  filter: gray;
  opacity: 0.7;
  animation: logoLoadingscan .6s linear infinite;
}



@keyframes logoLoadingscan {
  0% {
      transform: scale(1);
     
  }

  50% {
      transform: scale(1.6)
  }

  100% {
      transform: scale(1);
  }
}