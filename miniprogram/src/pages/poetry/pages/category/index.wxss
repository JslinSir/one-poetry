  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top:38rpx;
  right:30rpx;
  margin-bottom: -1rpx;
}

.poetry-list-box{
  padding: 30rpx;
  margin-top: 100rpx;
}

.toch-view-area{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background-color: transparent;
  right: 0;
}

/* mask  view  */

.mask-view{
  position: fixed;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  transition: all .3s;
  background: rgba(0, 0, 0, 0.5);
}

.pop-view{
  width: 100vw;
  /* height: 800rpx; */
  transition: all .3s ease-in-out;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  animation: popup-top-fadein 0.3s ease-in-out
}
.pop-head{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.pop-title{
  font-size: 32rpx;
  font-weight: bold;
  color:#000;
}
.close-icon{
  width: 40rpx;
  height: 40rpx;
}
.pop-cotent{
  padding: 30rpx;
}
.cate-pop-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.mg30{
  margin-bottom: 30rpx;
}


.loading-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 700rpx;
}

@keyframes popup-top-fadein {
  0% {
      transform: translate3d(0, -100%, 0);
      -webkit-transform: translate3d(0, -100%, 0);
      opacity: .1
  }

  100% {
      transform: translate3d(0, 0, 0);
      -webkit-transform: translate3d(0, 0, 0);
      opacity: 1
  }
}