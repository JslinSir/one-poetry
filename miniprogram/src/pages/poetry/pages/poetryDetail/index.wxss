
.poetry-detail-box{
 padding: 30rpx;
 margin-bottom: 200rpx;
}
.poetry-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.poetry-title{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.poetry-author{
 font-size: 24rpx;
 color:#999;
 margin-bottom: 10rpx;
}
.poetry-text{
  font-size: 28rpx;
  color: #323232;
  margin-bottom: 10rpx;
}

.author-link-view{
  position: fixed;
  bottom:120rpx;
  right: 30rpx;
}
.author-link{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  z-index: 2;
}


.like-btn{
  position: fixed;
  display: flex;
  height: 100rpx;
  width: 100vw;
  color:#fff;
  bottom:0;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #ff6727;
}

.like-icon{
  width: 64rpx;
  height: 64rpx;
}

