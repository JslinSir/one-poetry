.author-item{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #fff;
  border-radius: 20rpx;
  width: 280rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.author-img-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.author-img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background-color: #fafafa;
}
.author-img-default{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:#323232;
  background-color: #fafafa;
}
.author-text{
  font-size: 24rpx;
  color: #323232;
}
.author-grey{
  color: grey;
}
.author-detail{
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  color: grey;
  font-size: 24rpx;
}