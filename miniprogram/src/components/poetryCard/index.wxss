.poetry-list-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-radius: 20rpx;
    padding: 20rpx 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;

  }
  .poetry-list-item-left{
    display: flex;
    flex-direction: column;
  }
  .poetry-list-item-right{
    display: flex;
    flex-direction: column;
    
  }
  .poetry-title{
    font-size: 32rpx;
    color:#000;
    margin-bottom: 10rpx;
  }
  .poetry-dynati{
    font-size: 28rpx;
    color:#999
  }
  .linemg{
    margin: 0 10rpx;
  }
  .poetry-tags-view{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10rpx;
  }
  .poetry-tags{
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    color:#323232;
    border:1rpx solid #aaa;
    border-radius: 50%;
    margin-right: 10rpx;
  }