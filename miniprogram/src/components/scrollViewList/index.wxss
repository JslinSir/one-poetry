.scroll-contain {
  width: 100%;
  height: 100%;
}

.item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: salmon;
  text-align: center;
  margin-bottom: 30rpx;
}

.scroll-bottom {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  padding: 40rpx 0;
}

.refresher {
  width: 100%;
  height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
  background-color: #fafafa;
}